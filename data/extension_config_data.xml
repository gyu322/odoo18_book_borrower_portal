<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <!-- Configuration Parameters -->
    <record id="config_max_extensions" model="ir.config_parameter">
        <field name="key">book_borrower_portal.max_extensions</field>
        <field name="value">2</field>
    </record>
    
    <record id="config_min_days_before_expiry" model="ir.config_parameter">
        <field name="key">book_borrower_portal.min_days_before_expiry</field>
        <field name="value">3</field>
    </record>
    
    <record id="config_extension_days" model="ir.config_parameter">
        <field name="key">book_borrower_portal.extension_days</field>
        <field name="value">14</field>
    </record>
    
    <record id="config_max_extension_days" model="ir.config_parameter">
        <field name="key">book_borrower_portal.max_extension_days</field>
        <field name="value">30</field>
    </record>

</odoo>
<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    
    <!-- Extension Request Form -->
    <template id="extension_request_form">
        <t t-call="portal.portal_layout">
            <div class="container mt-3">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4><i class="fa fa-clock-o fa-fw me-2"/>Request Extension</h4>
                            </div>
                            <div class="card-body">
                    <!-- Success/Error Messages -->
                    <div class="alert alert-success" t-if="success_msg">
                        <i class="fa fa-check-circle"/> <t t-out="success_msg"/>
                    </div>
                    <t t-if="errors">
                        <t t-foreach="errors" t-as="error">
                            <div class="alert alert-danger">
                                <i class="fa fa-exclamation-circle"/> <t t-out="error"/>
                            </div>
                        </t>
                    </t>
                    
                    <!-- Book Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5><i class="fa fa-book"/> Book Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <t t-if="borrowing_record.book_id.image">
                                        <img t-attf-src="data:image/png;base64,{{borrowing_record.book_id.image}}" 
                                             alt="Book Cover" class="img-fluid"/>
                                    </t>
                                    <t t-else="">
                                        <div class="bg-light d-flex align-items-center justify-content-center" 
                                             style="height: 150px;">
                                            <i class="fa fa-book fa-3x text-muted"/>
                                        </div>
                                    </t>
                                </div>
                                <div class="col-md-10">
                                    <dl class="row">
                                        <dt class="col-sm-3">Title:</dt>
                                        <dd class="col-sm-9" t-out="borrowing_record.book_title"/>
                                        
                                        <dt class="col-sm-3">Author:</dt>
                                        <dd class="col-sm-9" t-out="borrowing_record.book_id.author"/>
                                        
                                        <dt class="col-sm-3">Borrow Date:</dt>
                                        <dd class="col-sm-9" t-out="borrowing_record.borrow_date"/>
                                        
                                        <dt class="col-sm-3">Current Due Date:</dt>
                                        <dd class="col-sm-9">
                                            <span class="fw-bold text-primary" t-out="borrowing_record.expected_return_date"/>
                                        </dd>
                                        
                                        <dt class="col-sm-3">Extensions Used:</dt>
                                        <dd class="col-sm-9">
                                            N/A (field not available)
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Extension Form -->
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        
                        <div class="row">
                            <div class="form-group col-md-6 mb-3">
                                <label for="requested_expiry_date" class="col-form-label">
                                    New Expiry Date <span class="text-danger">*</span>
                                </label>
                                <input type="date" name="requested_expiry_date" id="requested_expiry_date" 
                                       class="form-control" required="required"
                                       t-att-value="default_requested_date"/>
                                <small class="form-text text-muted">
                                    Maximum extension: 14 days from current due date
                                </small>
                            </div>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="request_reason" class="col-form-label">
                                Reason for Extension (Optional)
                            </label>
                            <textarea name="request_reason" id="request_reason" class="form-control" 
                                      rows="4" placeholder="Please provide a reason for the extension request..."></textarea>
                        </div>
                        
                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-success me-2">
                                <i class="fa fa-paper-plane"/> Submit Request
                            </button>
                            <a t-attf-href="/my/borrowed-books/{{borrowing_record.id}}" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"/> Back
                            </a>
                        </div>
                    </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Extension Not Allowed -->
    <template id="extension_not_allowed">
        <t t-call="portal.portal_layout">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="alert alert-warning">
                            <h4><i class="fa fa-exclamation-triangle"/> Extension Not Available</h4>
                            <p>You cannot request an extension for this book because:</p>
                            <ul>
                                <li t-if="borrowing_record.status != 'borrowed'">The book is not currently borrowed</li>
                                <li t-if="borrowing_record.expected_return_date and borrowing_record.expected_return_date &lt; datetime.date.today()">The book is already overdue</li>
                                <!-- Extension count check disabled - field not available -->
                                <li t-if="borrowing_record.expected_return_date and (borrowing_record.expected_return_date - datetime.date.today()).days > 3">Extension can only be requested within 3 days of due date</li>
                                <!-- Pending request check disabled - field not available -->
                            </ul>
                            <a t-attf-href="/my/borrowed-books/{{borrowing_record.id}}" class="btn btn-primary">
                                <i class="fa fa-arrow-left"/> Back to Book Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Extension Requests List View -->
    <template id="extension_requests_list_view">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-set="searchbar_sortings" t-value="sort_options"/>
            <t t-set="searchbar_filters" t-value="filter_options"/>
            <t t-set="sortby" t-value="sortby"/>
            <t t-set="filterby" t-value="filterby"/>
            <t t-set="title">Extension Requests</t>
            <t t-set="default_url">/my/extension-requests</t>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Extension Requests</t>
            </t>

            <t t-if="not extension_requests">
                <div class="alert alert-info">
                    <p>You have no extension requests.</p>
                </div>
            </t>
            <t t-else="">
                <t t-call="portal.portal_table">
                    <table class="table table-hover o_portal_my_doc_table">
                        <thead>
                            <tr>
                                <th>Request</th>
                                <th>Book</th>
                                <th>Request Date</th>
                                <th>Status</th>
                                <th>Extension Days</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="extension_requests" t-as="request">
                                <td>
                                    <a t-attf-href="/my/extension-requests/{{request.id}}" class="fw-bold">
                                        <t t-out="request.name"/>
                                    </a>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="me-2">
                                            <t t-if="request.book_id.image">
                                                <img t-attf-src="data:image/png;base64,{{request.book_id.image}}" 
                                                     alt="Book Cover" class="img-thumbnail" 
                                                     style="width: 40px; height: 50px; object-fit: cover;"/>
                                            </t>
                                            <t t-else="">
                                                <div class="bg-light d-flex align-items-center justify-content-center" 
                                                     style="width: 40px; height: 50px;">
                                                    <i class="fa fa-book text-muted"/>
                                                </div>
                                            </t>
                                        </div>
                                        <div>
                                            <div class="fw-bold" t-out="request.book_id.title"/>
                                            <small class="text-muted">by <t t-out="request.book_id.author"/></small>
                                        </div>
                                    </div>
                                </td>
                                <td t-out="request.request_date" t-options="{'widget': 'datetime'}"/>
                                <td>
                                    <t t-if="request.status == 'pending'">
                                        <span class="badge badge-warning">
                                            <t t-out="request.status.title()"/>
                                        </span>
                                    </t>
                                    <t t-elif="request.status == 'approved'">
                                        <span class="badge badge-success">
                                            <t t-out="request.status.title()"/>
                                        </span>
                                    </t>
                                    <t t-else="">
                                        <span class="badge badge-danger">
                                            <t t-out="request.status.title()"/>
                                        </span>
                                    </t>
                                </td>
                                <td>
                                    <t t-out="request.extension_days"/> days
                                    <t t-if="request.status == 'approved'">
                                        <br/><small class="text-success">
                                            New due date: <t t-out="request.new_expiry_date"/>
                                        </small>
                                    </t>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a t-attf-href="/my/extension-requests/{{request.id}}" class="btn btn-sm btn-outline-primary">
                                            <i class="fa fa-eye"/> View
                                        </a>
                                        <a t-attf-href="/my/extension-requests/print/{{request.id}}" class="btn btn-sm btn-outline-secondary">
                                            <i class="fa fa-download"/> PDF
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>

    <!-- Extension Request Detail View -->
    <template id="extension_request_detail_view">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            
            <t t-call-assets="portal.assets_frontend" lazy_load="True"/>
            
            <div class="container mt-3">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4><i class="fa fa-clock-o fa-fw me-2"/>Extension Request <t t-out="extension_request.name"/></h4>
                                    <t t-if="extension_request.status == 'pending'">
                                        <span class="badge badge-lg badge-warning">
                                            <t t-out="extension_request.status.title()"/>
                                        </span>
                                    </t>
                                    <t t-elif="extension_request.status == 'approved'">
                                        <span class="badge badge-lg badge-success">
                                            <t t-out="extension_request.status.title()"/>
                                        </span>
                                    </t>
                                    <t t-else="">
                                        <span class="badge badge-lg badge-danger">
                                            <t t-out="extension_request.status.title()"/>
                                        </span>
                                    </t>
                                </div>
                            </div>
                            
                            <div class="card-body">
                    <div class="row">
                        <!-- Request Information -->
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5><i class="fa fa-info-circle"/> Request Information</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-5">Request Date:</dt>
                                        <dd class="col-sm-7" t-out="extension_request.request_date" t-options="{'widget': 'datetime'}"/>
                                        
                                        <dt class="col-sm-5">Current Due Date:</dt>
                                        <dd class="col-sm-7" t-out="extension_request.original_expiry_date"/>
                                        
                                        <dt class="col-sm-5">Requested Due Date:</dt>
                                        <dd class="col-sm-7" t-out="extension_request.requested_expiry_date"/>
                                        
                                        <dt class="col-sm-5">Extension Days:</dt>
                                        <dd class="col-sm-7" t-out="extension_request.extension_days"/>
                                        
                                        <dt class="col-sm-5">Status:</dt>
                                        <dd class="col-sm-7">
                                            <t t-if="extension_request.status == 'pending'">
                                                <span class="badge badge-warning">
                                                    <t t-out="extension_request.status.title()"/>
                                                </span>
                                            </t>
                                            <t t-elif="extension_request.status == 'approved'">
                                                <span class="badge badge-success">
                                                    <t t-out="extension_request.status.title()"/>
                                                </span>
                                            </t>
                                            <t t-else="">
                                                <span class="badge badge-danger">
                                                    <t t-out="extension_request.status.title()"/>
                                                </span>
                                            </t>
                                        </dd>
                                    </dl>
                                    
                                    <t t-if="extension_request.request_reason">
                                        <hr/>
                                        <h6>Reason:</h6>
                                        <p t-out="extension_request.request_reason"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Book Information -->
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5><i class="fa fa-book"/> Book Information</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex">
                                        <div class="me-3">
                                            <t t-if="extension_request.book_id.image">
                                                <img t-attf-src="data:image/png;base64,{{extension_request.book_id.image}}" 
                                                     alt="Book Cover" class="img-thumbnail" style="width: 80px; height: 100px; object-fit: cover;"/>
                                            </t>
                                            <t t-else="">
                                                <div class="bg-light d-flex align-items-center justify-content-center" 
                                                     style="width: 80px; height: 100px;">
                                                    <i class="fa fa-book text-muted"/>
                                                </div>
                                            </t>
                                        </div>
                                        <div class="flex-grow-1">
                                            <dl class="row">
                                                <dt class="col-sm-4">Title:</dt>
                                                <dd class="col-sm-8" t-out="extension_request.book_id.title"/>
                                                
                                                <dt class="col-sm-4">Author:</dt>
                                                <dd class="col-sm-8" t-out="extension_request.book_id.author"/>
                                                
                                                <dt class="col-sm-4">ISBN:</dt>
                                                <dd class="col-sm-8" t-out="extension_request.book_id.isbn"/>
                                                
                                                <dt class="col-sm-4">Borrow Record:</dt>
                                                <dd class="col-sm-8">
                                                    <a t-attf-href="/my/borrowed-books/{{extension_request.borrowing_record_id.id}}">
                                                        <t t-out="extension_request.borrowing_record_id.sequence"/>
                                                    </a>
                                                </dd>
                                            </dl>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Review Information (if processed) -->
                    <t t-if="extension_request.status != 'pending'">
                        <div class="card mt-3">
                            <div class="card-header">
                                <h5><i class="fa fa-gavel"/> Review Information</h5>
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-2">Reviewed By:</dt>
                                    <dd class="col-sm-4">
                                        <t t-if="extension_request.reviewed_by">
                                            <strong t-out="extension_request.reviewed_by.name"/>
                                        </t>
                                        <t t-else="">
                                            <span class="text-muted">System</span>
                                        </t>
                                    </dd>
                                    
                                    <dt class="col-sm-2">Review Date:</dt>
                                    <dd class="col-sm-4" t-out="extension_request.review_date" t-options="{'widget': 'datetime'}"/>
                                    
                                    <t t-if="extension_request.status == 'approved'">
                                        <dt class="col-sm-2">New Due Date:</dt>
                                        <dd class="col-sm-4 fw-bold text-success" t-out="extension_request.new_expiry_date"/>
                                    </t>
                                </dl>
                                
                                <t t-if="extension_request.status == 'rejected' and extension_request.rejection_reason">
                                    <hr/>
                                    <h6 class="text-danger">Rejection Reason:</h6>
                                    <p t-out="extension_request.rejection_reason"/>
                                </t>
                            </div>
                        </div>
                    </t>
                    
                                <!-- Actions -->
                                <div class="mt-3">
                                    <a href="/my/extension-requests" class="btn btn-secondary me-2">
                                        <i class="fa fa-arrow-left"/> Back to List
                                    </a>
                                    <a t-attf-href="/my/extension-requests/print/{{extension_request.id}}" class="btn btn-outline-primary">
                                        <i class="fa fa-download"/> Download PDF
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>